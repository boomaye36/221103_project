<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.justlift.admin.dao.AdminDAO">
 	<insert id="insertGym" parameterType="map">
 		INSERT INTO `gym`
 		(
 			`name`
 			,`categoryId`
 			,`location`
 			,`phoneNumber`

 			,`introduce`
 			,`rank`
 			,`image`
 			,`createdAt`
 			,`updatedAt`
 		)
 		VALUES
 		(
 			#{name}
 			,#{categoryId}
 			,#{location}
 			,#{phoneNumber}
 			,#{introduce}
 			,#{rank}
 			,#{imagePath}
 			,NOW()
 			,NOW()
 		)
 	</insert>
 	
 	<insert id="insertTrainer" parameterType="map">
 		INSERT INTO `trainer`
 		(
 			`name`
 			,`gymId`
 			,`phoneNumber`

 			,`introduce`
 			,`rank`
 			,`image`
 			,`createdAt`
 			,`updatedAt`
 		)
 		VALUES
 		(
 			#{name}
 			,#{gymId}
 			,#{phoneNumber}
 			,#{introduce}
 			,#{rank}
 			,#{imagePath}
 			,NOW()
 			,NOW()
 		)
 	</insert>
 </mapper>